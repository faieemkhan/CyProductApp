@using MVCCoreApplication.Constants;
@model IEnumerable<MVCCoreApplication.Models.Product>
<link rel="stylesheet" href="~/css/AdminDashboard.css" />
@{
    ViewData["Title"] = "AdminDashboard";
}

<center><h2 class="h1">Admin Dashboard</h2></center>

<br/>

<div class="alert">

    @TempData["ProductMessage"]

</div>




   
        <div class="mb-4">

            <a class="d-inline-block float-left btn btn-primary" asp-action="AddProduct">AddProduct</a>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageFile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumberOfProduct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </th>
                        <th>
                            Edit
                        </th>
                        <th>
                            Delete
                        </th>
                        <th>
                            Details
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageFile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberOfProduct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </td>
                            <td>
                                <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-secondary btn-sm Active">Edit</a>
                            </td>
                            <td>
                                <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm Active">Details</a>
                            </td>
                            <td>
                                <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger btn-sm Active">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


   








