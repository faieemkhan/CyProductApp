@model MVCCoreApplication.Models.Product
@using MVCCoreApplication.Constants
@{
    ViewData["Title"] = "AddProduct";
}
<center><h4 style="color:aquamarine">AddProduct</h4></center>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
               
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label"></label>
                <select asp-for="category" class="form-control"  asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                <span asp-validation-for="category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfProduct" class="control-label"></label>
                <input asp-for="NumberOfProduct" class="form-control" />
                <span asp-validation-for="NumberOfProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddProduct" class="btn btn-primary btn-sm active" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminDashboard">Back to List</a>
</div>

